{
  "name": "satgate",
  "version": "1.0.0",
  "description": "SatGate - Protect & monetize your API with Lightning. Instant. Permissionless.",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "start:backend": "node backend/server.js",
    "start:prod": "NODE_ENV=production node backend/server.js",
    "dev": "NODE_ENV=development node backend/server.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "health": "curl -s http://127.0.0.1:8083/health | jq",
    "test:ping": "curl -s http://127.0.0.1:8081/api/free/ping | jq",
    "test:402": "curl -s -I http://127.0.0.1:8081/api/analytics | head -20",
    "docs:serve": "npx http-server -p 8080 .",
    "lint": "echo 'No linter configured - add eslint for production'",
    "postinstall": "echo 'Installation complete. Run: npm start'"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "keywords": [
    "satgate",
    "l402",
    "lsat",
    "lightning",
    "bitcoin",
    "aperture",
    "paywall",
    "api-monetization",
    "micropayments"
  ],
  "author": "",
  "license": "MIT"
}
